<!DOCTYPE html>
<html lang="en">

  <%- include('includes/header') %>

<body class="d-flex flex-column min-vh-100 text-light">

  <%- include('includes/navbar', {user : null}) %>

  <div class="container mt-5">
    <div class="row mt-5">
      <div class="col-md-12 d-flex align-items-center justify-content-center mb-3">
        <h1>Phone Comparison</h1>
      </div>
      <form action="compare/phone1/phone2">
        <div class="row">
          <div class="col-md-6 d-flex flex-column align-items-center justify-content-center">
            <label for="phone1" class="form-label mt-3">Phone 1</label>
            <input type="text" class="form-control w-75" id="phone1" placeholder="Insert Phone Name">
          </div>
          <div class="col-md-6 d-flex flex-column align-items-center justify-content-center">
            <label for="phone2" class="form-label mt-3">Phone 2</label>
            <input type="text" class="form-control w-75" id="phone2" placeholder="Insert Phone Name">
          </div>
        </div>
        <div class="col-md-12 d-flex align-items-center justify-content-center mt-5">
          <input class="btn btn-light" type="submit" value="Compare">
        </div>
      </form>
      
    </div>
  </div>
  
  <%- include('includes/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>
