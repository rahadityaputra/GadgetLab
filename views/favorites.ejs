<!DOCTYPE html>
<html lang="en">


<%- include('includes/header') %>
<body>
    <%- include('includes/navbar', {user : null}) %>

    <div class="container my-5">
        <div class="row justify-content-center">
          <div class="col-md-12 d-flex align-items-center justify-content-center">
            <h1 class="pb-4 text-light">Favorite Phones</h1>
          </div>
          <div class="col-md-12">
            <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
                <% if(reviews && reviews.length > 0) {%>        
                    <% favorites.forEach(function ({dataValues}) { %>
                        <div class="col">
                        <a href="http://localhost:3000/phone/"<%= datavalue.id_device %>" class="card clickable-card rounded-4" style="text-decoration: none;">
                            <img src="<%= datavalue.device_img %>" class="card-img-top rounded-4" alt="Phone Image">
                            <div class="card-body">
                            <h5 class="card-title">"<%= datavalue.device_name %></h5>
                            </div>
                        </a>
                        </div>
                    <% }) %>
                <% } else {%>       

                    <!-- error handling jika tidak ada favorit device -->


                <% }%>       
            </div>
          </div>
          <div class="col-md-12 text-center mt-5">
            <nav aria-label="Page navigation">
              <ul class="pagination justify-content-center">
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                  </a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </div>

    <%- include('includes/footer') %>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>