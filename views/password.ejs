<!DOCTYPE html>
<html lang="en">

<%- include('includes/header') %>


<body class="d-flex flex-column min-vh-100 text-light">

<%- include('includes/navbar', {user}) %>

  <div class="container d-flex justify-content-center align-items-center flex-grow-1 my-5 pb-4 rounded-5 shadow w-50 border">
    <div class="w-50">
      <h1 class="mb-4 text-center">Change Password</h1>
      <form id="password-form">
        <div class="mb-3 position-relative">
          <input type="password" class="form-control rounded-5 pe-5" id="password" name="password" placeholder="Your Password" required>
          <i class="bi bi-lock position-absolute top-50 end-0 translate-middle-y pe-3" style="font-size: 18px; color: #343a40;"></i>
        </div>
        <div class="mb-3 position-relative">
          <input type="password" class="form-control rounded-5 pe-5" id="newPassword" name="newPassword" placeholder="New Password" required>
          <i class="bi bi-lock position-absolute top-50 end-0 translate-middle-y pe-3" style="font-size: 18px; color: #343a40;"></i>
        </div>
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="showPassword">
          <label class="form-check-label mb-2" for="showPassword">Show Password</label>
        </div>
        <input type="submit" class="btn btn-light w-100 rounded-pill" value="Change"></input>
      </form>
    </div>
  </div>
    
  <%- include('includes/footer') %>
  <%- include('includes/script') %>
  <!-- <script src="/showPassword.js"></script> -->
   <script src="/password.js"></script>
</body>
</html>
